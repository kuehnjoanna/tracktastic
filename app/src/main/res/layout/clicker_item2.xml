<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llClicker"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="0dp"
        android:layout_height="700dp"
        android:background="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
//hier sollte background shape sein
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="48dp"
                android:layout_marginEnd="16dp"
                android:background="#676589">

                <ImageView
                    android:id="@+id/imageview3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_launcher_foreground" />

                <TextView
                    android:id="@+id/textview3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:text="Hello, Joanna"
                    android:textColor="@color/white"
                    android:textSize="19sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@id/imageview3"
                    app:layout_constraintTop_toTopOf="@id/imageview3" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="joanna@joanna.com"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@id/imageview3"
                    app:layout_constraintStart_toStartOf="@id/textview3"
                    app:layout_constraintTop_toBottomOf="@id/textview3" />

                <TextView
                    android:id="@+id/textview5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="your balance"
                    android:textColor="@color/white"
                    android:textSize="17sp"
                    app:layout_constraintStart_toStartOf="@id/imageview3"
                    app:layout_constraintTop_toBottomOf="@id/imageview3" />

                <TextView
                    android:id="@+id/textview6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:text="$62,1753.78"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@id/textview5"
                    app:layout_constraintTop_toBottomOf="@id/textview5"
                    app:layout_constraintVertical_bias="0.279" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="16dp"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button"
                    android:layout_width="0dp"
                    style="@android:style/Widget.Button"
                    android:background="@drawable/dark_bg"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="send"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:layout_marginEnd="8dp"
                    android:drawableStart="@drawable/baseline_add_circle_outline_24"
                    android:drawablePadding="8dp"
                    android:padding="12dp"
                    android:drawableTint="@color/design_default_color_on_primary"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button2"
                    android:layout_width="0dp"
                    style="@android:style/Widget.Button"
                    android:background="@drawable/dark_bg"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:layout_marginStart="8dp"
                    android:text="request"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:drawableStart="@drawable/baseline_add_circle_outline_24"
                    android:drawablePadding="8dp"
                    android:padding="12dp"
                    android:drawableTint="@color/design_default_color_on_primary"/>

            </LinearLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="16dp"
                android:background="#656328">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="24dp"
                    android:id="@+id/imageview4"
                    app:layout_constraintStart_toStartOf="parent"
                    android:drawableTint="@color/design_default_color_on_primary"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/baseline_add_circle_outline_24"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textview7"
                    android:textColor="@color/white"
                    android:textSize="19sp"
                    android:layout_marginStart="8dp"
                    android:text="income"
                    app:layout_constraintBottom_toBottomOf="@id/imageview4"
                    app:layout_constraintStart_toEndOf="@id/imageview4"
                    app:layout_constraintTop_toTopOf="@id/imageview4"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTint="@color/design_default_color_on_primary"
                    android:id="@+id/imageview5"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintBottom_toBottomOf="@id/imageview4"
                    app:layout_constraintEnd_toStartOf="@id/textview8"
                    app:layout_constraintTop_toTopOf="@id/imageview4"
                    app:srcCompat="@drawable/baseline_add_circle_outline_24"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textview8"
                    android:layout_marginEnd="24dp"
                    android:textColor="@color/white"
                    android:textSize="19sp"
                    android:text="expense"
                    app:layout_constraintBottom_toBottomOf="@id/imageview5"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/imageview5"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textview9"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:text="$304,124"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/textview7"
                    app:layout_constraintStart_toStartOf="@id/imageview4"
                    app:layout_constraintTop_toBottomOf="@id/textview7"
                    android:textColor="@color/white"
                    app:layout_editor_absoluteX="24dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textview10"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:text="$304,124"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/textview8"
                    app:layout_constraintStart_toStartOf="@id/imageview5"
                    app:layout_constraintTop_toBottomOf="@id/textview8"
                    android:textColor="@color/white"
                    app:layout_editor_absoluteX="24dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="16dp"
                android:orientation="horizontal"
                android:background="#656328">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="16dp"
                    android:layout_weight="0.25"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageview6"
                        app:srcCompat="@drawable/baseline_add_circle_outline_24"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textview11"
                        android:text="clicker"
                        android:textAlignment="center"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/white"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="16dp"
                    android:layout_weight="0.25"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageview7"
                        app:srcCompat="@drawable/baseline_add_circle_outline_24"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textview12"
                        android:text="timer"
                        android:textAlignment="center"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/white"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="16dp"
                    android:layout_weight="0.25"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageview8"
                        app:srcCompat="@drawable/baseline_add_circle_outline_24"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textview13"
                        android:text="categories"
                        android:textAlignment="center"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/white"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="16dp"
                    android:layout_weight="0.25"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageview9"
                        app:srcCompat="@drawable/baseline_add_circle_outline_24"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textview14"
                        android:text="stats"
                        android:textAlignment="center"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/white"/>
                </LinearLayout>
            </LinearLayout>
<androidx.recyclerview.widget.RecyclerView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/recyclerView"
    android:paddingStart="8dp"
    android:paddingEnd="8dp"
    android:paddingTop="8dp"
    tools:listitem="@layout/clicker_item"
    android:paddingBottom="85dp"/>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>