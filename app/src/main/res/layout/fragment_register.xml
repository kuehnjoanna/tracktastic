<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ui.login.RegisterFragment">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Set New Account"
        android:gravity="center"
        android:textSize="40dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="200dp"
        android:hint="name"
        android:id="@+id/ETuserNameNew"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="200dp"
        android:hint="email"
        android:id="@+id/ETuserEmailNew"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="200dp"
        android:hint="password"
        android:id="@+id/ETuserPasswordNew"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginVertical="20dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginHorizontal="4dp"
            android:src="@drawable/ic_launcher_background"
            android:id="@+id/profilPicture1"/>
        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginHorizontal="4dp"
            android:src="@drawable/ic_launcher_background"
            android:id="@+id/profilPicture2"/>
        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginHorizontal="4dp"
            android:src="@drawable/ic_launcher_background"
            android:id="@+id/profilPicture3"/>
        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginHorizontal="4dp"
            android:src="@drawable/ic_launcher_background"
            android:id="@+id/profilPicture4"/>

    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:id="@+id/BTNcreateNewUser"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textStyle="italic"
        android:text="create"
        android:textSize="20dp"/>

</LinearLayout>