<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ui.SetNewFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Set New Activity"
        android:textSize="40dp" />

    <EditText
        android:id="@+id/ETactivityNameNew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="name"
        android:minWidth="200dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="do you want to set reminders? no/yes how often" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="set amount of clicks per day, //one, more, unlmtd" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" set a timer for tracking (set/disable) set: count up, count down, pomodoro: work/break" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="do you want to set a deadline ? if yes: days/months/specific time" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/BTNpickTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="time"
                android:textSize="20dp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/tvTimeSelected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="time"
                android:textSize="40dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/BTNpickDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="date"
                android:textSize="20dp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/tvDateSelected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="date"
                android:textSize="40dp" />
        </LinearLayout>
    </LinearLayout>

    <EditText
        android:id="@+id/ETuserPasswordNew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="password"
        android:minWidth="200dp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/BTNcreateNewActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="create"
        android:textSize="20dp"
        android:textStyle="italic" />

</LinearLayout>